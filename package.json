{
  "name": "@nverk/react-native-dnd",
  "version": "1.0.0",
  "description": "A versatile drag and drop library for React Native with gesture handling and smooth animations",
  "author": "Nver Khachoyan",
  "license": "MIT",
  "keywords": [
    "react-native",
    "drag-and-drop",
    "dnd",
    "gestures",
    "reanimated",
    "expo",
    "mobile",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nverkhachoyan/react-native-dnd.git"
  },
  "bugs": {
    "url": "https://github.com/nverkhachoyan/react-native-dnd/issues"
  },
  "homepage": "https://react-native-dnd.nverk.me",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "react-native": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "react-native": "./dist/index.js",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:tsc": "tsc --project tsconfig.json",
    "dev": "tsup --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=17",
    "react-native": ">=0.70",
    "react-native-gesture-handler": ">=2",
    "react-native-reanimated": ">=3"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@tsconfig/react-native": "^3.0.5",
    "@types/react": "~19.0.10",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.2",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.10.0",
    "react-native-web": "~0.20.0",
    "react-native-webview": "13.13.5",
    "tsc-alias": "^1.8.16",
    "tsconfig": "^7.0.0",
    "tsup": "^8.5.0",
    "typescript": "~5.8.3"
  }
}
